<%= form_for @producto do |f| %>
    <div class="field">
        <%= f.label :nombre %>
        <%= f.text_field :prod_nombre %>
    </div>

    <div class="field">
        <%= f.label :precio %>
        <%= f.text_field :prod_precio %>
    </div>

    <div class="field">
        <%= f.label :descripcion %>
        <%= f.text_field :prod_descripcion %>
    </div>

    <div class="actions">
        <%= f.submit "Guardar cambios" %>
    </div>
<% end %>
