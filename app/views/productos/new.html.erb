<div class="container">
  <h1 class="mt-4 text-center">Nuevo Producto</h1>

  <%= form_with(model: @producto, local: true, html: { class: "needs-validation", novalidate: true }) do |form| %>
    <% if @producto.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@producto.errors.count, "error") %> prohibi贸 que este producto se guardara:</h2>
        <ul>
          <% @producto.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row justify-content-center">
      <div class="col-lg-6">
        <div class="mb-3">
          <%= form.label :nombre, class: "form-label" %>
          <%= form.text_field :prod_nombre, class: "form-control", id: :prod_nombre, placeholder: "Nombre del producto", required: true %>
          <div class="invalid-feedback">
            Por favor ingresa el nombre del producto.
          </div>
        </div>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-lg-6">
        <div class="mb-3">
          <%= form.label :precio, class: "form-label" %>
          <div class="input-group">
            <span class="input-group-text">COP</span>
            <%= form.number_field :prod_precio, class: "form-control", id: :prod_precio, placeholder: "Precio del producto", required: true %>
            <div class="invalid-feedback">
              Por favor ingresa el precio del producto.
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-lg-6">
        <div class="mb-3">
          <%= form.label :descripcion, class: "form-label" %>
          <%= form.text_area :prod_descripcion, class: "form-control", id: :prod_descripcion, placeholder: "Descripci贸n del producto", required: true %>
          <div class="invalid-feedback">
            Por favor ingresa la descripci贸n del producto.
          </div>
        </div>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-lg-6 text-center"> <!-- Centrar el bot贸n y el link -->
        <%= form.submit "Guardar", class: "btn btn-primary", id: "submit-button" %>
      </div>
    </div>
  <% end %>

  <div class="row justify-content-center mt-3">
    <div class="col-lg-6 text-center">
      <%= link_to 'Volver', productos_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    var form = document.querySelector(".needs-validation");
    var nombreInput = document.getElementById("producto_prod_nombre");
    var precioInput = document.getElementById("producto_prod_precio");
    var descripcionInput = document.getElementById("producto_prod_descripcion");
    var submitButton = document.getElementById("submit-button");

    function validateForm(event) {
      if (!form.checkValidity() || !nombreInput.value || !precioInput.value || !descripcionInput.value) {
        event.preventDefault();
        event.stopPropagation();
        form.classList.add("was-validated");

        if (!nombreInput.value) {
          nombreInput.classList.add("is-invalid");
        } else {
          nombreInput.classList.remove("is-invalid");
        }

        if (!precioInput.value) {
          precioInput.classList.add("is-invalid");
        } else {
          precioInput.classList.remove("is-invalid");
        }

        if (!descripcionInput.value) {
          descripcionInput.classList.add("is-invalid");
        } else {
          descripcionInput.classList.remove("is-invalid");
        }
      } else {
        form.classList.remove("was-validated");
      }
    }

    submitButton.addEventListener("click", validateForm);

    form.addEventListener("submit", function(event) {
      validateForm(event);
    });
  });
</script>

