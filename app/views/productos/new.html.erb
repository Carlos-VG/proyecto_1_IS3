<!-- app/views/productos/new.html.erb -->
<h1>Nuevo Producto</h1>

<%= form_with(model: @producto, local: true) do |form| %>
  <% if @producto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@producto.errors.count, "error") %> prohibi√≥ que este producto se guardara:</h2>

      <ul>
        <% @producto.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :prod_nombre, id: :prod_nombre %>
  </div>

  <div class="field">
    <%= form.label :precio %>
    <%= form.number_field :prod_precio, id: :prod_precio %>
  </div>

  <div class="field">
    <%= form.label :descripcion %>
    <%= form.text_area :prod_descripcion, id: :prod_descripcion %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Volver', productos_path %>
