<!-- app/views/productos/index.html.erb -->
<h1>Lista de Proveedores</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Nombre</th>
    <th colspan="3">Acciones</th>
  </tr>

  <% @agentes.each do |agente| %>
    <tr>
      <td><%= agente.id %></td>
      <td><%= agente.agen_nombre %></td>
      <td><%= link_to 'Ver', agente %></td>
      <td><%= link_to 'Editar', edit_agente_path(agente) %></td>
      <td><%= link_to 'Eliminar', agente, method: :delete, data: { confirm: '¿Estás seguro?' }, "data-turbo-method": "delete" %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Nuevo Agente', new_agente_path %>
<%= link_to 'Volver',root_path%>