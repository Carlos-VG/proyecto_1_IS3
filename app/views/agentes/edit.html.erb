<div class="container">
  <h1 class="mt-4 text-center">Editando proveedor</h1>
  <%= form_for @agente, html: { class: "needs-validation", novalidate: true } do |f| %>
    <% if @agente.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@agente.errors.count, "error") %> prohibi√≥ que este agente se guardara:</h2>
        <ul>
          <% @agente.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="mb-3">
                <%= f.label :nombre, class: "form-label" %>
                <%= f.text_field :agen_nombre, class: "form-control", placeholder: "Nombre del proveedor", required: true %>
                <div class="invalid-feedback">
                    Por favor ingresa el nombre del proveedor.
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <%= f.submit "Guardar cambios", class: "btn btn-primary me-2", id: "submit-button" %>
        </div>
    </div>
  <% end %>

  <div class="row justify-content-center mt-3">
    <div class="col-lg-6 text-center">
      <%= link_to 'Volver', agentes_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    document.getElementById("submit-button").addEventListener("click", function(event) {
      var form = document.querySelector(".needs-validation");
      var nombreInput = document.getElementById("agente_agen_nombre");

      if (!nombreInput.value) {
        event.preventDefault();
        event.stopPropagation();
        form.classList.add("was-validated");
        nombreInput.classList.add("is-invalid");
      } else {
        form.classList.remove("was-validated");
        nombreInput.classList.remove("is-invalid");
      }
    });
  });
</script>
